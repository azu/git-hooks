#!/bin/bash

source `dirname ${0}`/_local-hook-exec
declare parentDir="$(dirname "$PWD")"
# Secretlint
declare FILES=$(git diff --cached --name-only --diff-filter=ACMR | sed 's| |\\ |g')
[ -z "$FILES" ] && exit 0

# Secretlint all selected files
echo "$FILES" | xargs ./node_modules/.bin/secretlint
declare RET=$?
if [ $RET -eq 0 ] ;then
    exit 0
else
    exit 1
fi
